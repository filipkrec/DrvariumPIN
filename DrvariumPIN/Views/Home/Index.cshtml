@{
    ViewData["Title"] = "Drvarium";
}

<div id="myCarousel" class="carousel slide mycarousel" data-ride="carousel" data-interval="6000">
    <ol class="carousel-indicators">
        <li data-target="#myCarousel" data-slide-to="0" class="active"></li>
        <li data-target="#myCarousel" data-slide-to="1"></li>
        <li data-target="#myCarousel" data-slide-to="2"></li>
        <li data-target="#myCarousel" data-slide-to="3"></li>
    </ol>
    <div class="carousel-inner" role="listbox">
        <div class="item active">
            <img src="~/images/drvo1.jpg" class="img-responsive" />
            <div class="carousel-caption" role="option">
                <p>
                    Dobrodošli u Drvarium, web stranicu za sve ljubitelje drveća!
                </p>
            </div>
        </div>
        <div class="item">
            <img src="~/images/drvo2.png"  />
        </div>
        <div class="item">
            <img src="~/images/drvo3.jpg"  />
        </div>
        <div class="item">
            <img src="~/images/drvo4.jpg"  />
        </div>
    </div>
    <a class="left carousel-control" href="#myCarousel" role="button" data-slide="prev">
        <span class="glyphicon glyphicon-chevron-left" aria-hidden="true"></span>
        <span class="sr-only">Previous</span>
    </a>
    <a class="right carousel-control" href="#myCarousel" role="button" data-slide="next">
        <span class="glyphicon glyphicon-chevron-right" aria-hidden="true"></span>
        <span class="sr-only">Next</span>
    </a>
</div>

<style>
    .mycarousel {
        margin: auto;
        height: 800px;
        width: 1200px;
        max-width: 100%;
        border-style: groove;
        border-width: thick;
    }

    .item img {
        height: 800px !important;
        width: 1200px !important;
        border-style: groove;
        border-width: thick;
    }

    .carousel-caption {
        top: 0;
        bottom: auto;
        font-size: 24px;
    }
</style>